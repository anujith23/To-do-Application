<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:padding="16dp"
    tools:context=".DevProfileActivity">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="53dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back Button"
        android:src="@drawable/baseline_arrow_back_24" />

    <!-- Banner Image -->
    <ImageView
        android:id="@+id/bannerImage"
        android:layout_width="395dp"
        android:layout_height="135dp"
        android:layout_below="@id/backButton"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/banner_image" />

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="139dp"
        android:layout_height="123dp"
        android:layout_below="@id/bannerImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50dp"
        android:src="@mipmap/developer_profile" />

    <!-- Name -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Anujith Induwara"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- ID -->
    <TextView
        android:id="@+id/userId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:text="2021t01209"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

    <!-- Description -->
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Welcome to TASK PULSE, Your ultimate productivity companion designed to simplify your life and amplify your efficiency. With TASK PULSE, you can effortlessly manage your tasks, stay organized, and achieve your goals with ease"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <!-- Version -->
    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Version 0.01"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

</RelativeLayout>
